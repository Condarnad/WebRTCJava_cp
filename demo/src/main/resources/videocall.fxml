                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" fx:id="endCall">
                    <HBox.margin>
                        <Insets left="100.0" right="100.0" />
                    </HBox.margin>
               <image>
                  <Image url="@end_call.png" />
               </image>
                </ImageView>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true"  fx:id="muteMic">
                    <image>
                        <Image url="@mute_mic.png" />
                    </image>
                </ImageView>
            </children>
            <StackPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </StackPane.margin>
        </HBox>
    </children>
</StackPane>
